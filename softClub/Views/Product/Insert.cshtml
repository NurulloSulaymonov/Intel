@model Domains.Entities.Product
<form method="POST" action="Insert">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Price" for="priceInput"></label>
            <input type="number" asp-for="Price" class="form-control" id="priceInput" placeholder="Price">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="ProductCount" for="inputCout"></label>
            <input asp-for="ProductCount" type="number" class="form-control" id="inputCout" placeholder="count">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ProductName" for="name"></label>
        <input asp-for="ProductName" type="text" class="form-control" id="name" placeholder="product1">
    </div>
   
    <button type="submit" class="btn btn-primary">Add</button>
</form>